{% extends 'partials/variables.html.twig' %}

{% set module = page.header.hero %}
{% block render_block %}
  {# {% set image = page.media[page.header.hero.image] %} #}

  {% set imageFilename = page.header.hero.image %}
  {% set image = page.media[imageFilename] %}

  {% set bg = page.media[page.header.hero.hero_bg].url ?? '' %}
    <div class="hero {{ module.size == 'medium' ? 'medium' : '' }}"
         style="{% if(bg) %}background-image: url('{{ bg }}'){% endif %}">
        <div class="container hero-container {{ module.classes }}">
            <div class="hero-text {{ module.classes == 'text_image_center' ? 'hero_text_center' : 'hero_text_left' }}">
                <h2 class="slide-in hidden-on-sm">{{ module.h2.translatable|striptags('<span>')|raw }}</h2>
                <h1 class="slide-in">
                    {{ module.h1.translatable|striptags('<span>')|raw }} 
                </h1>

                {% set media = page.media %}
                {% for image in media.images %}
                    <div class="hero-image hidden-on-lg"><img class="zoom-in-image" src="{{ image.url }}" /></div>
                {% endfor %}
                
                {# <div class="hero-image hidden-on-lg"><img class="zoom-in-image" src="{{ image.url }}" /></div> #}
                <p class="slide-in">
                    {{ module.text.translatable }}
                </p>

                {# <button class="btn slide-in button-gradient-primary" href="{{ button.link }}">{{ button.text.translatable }}</button> #}
                {% for button in module.buttons  %}
                    <button class="btn slide-in button-gradient-primary" href="{{ button.link }}">{{ button.text.translatable }}</button>
                {% endfor %}
            </div>
            {% set media = page.media %}
            <div class="hero-image  flex-on-lg hidden-on-sm" >
                {% for image in media.images %}
                    <img class="zoom-in-image hidden-on-sm" src="{{ image.url }}" alt="{{ image.alt }}">
                {% endfor %}
            </div>


           
        </div>
    </div>
{% endblock %}